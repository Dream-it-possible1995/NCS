<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.gld.ncs.dao.NormItemDao">
    <resultMap id="normItemMap" type="com.gld.ncs.model.NormItem">
        <result property="normitemId" column="normitem_id"/>
        <result property="sectionId" column="section_id"/>
        <result property="normitemCode" column="normitem_code"/>
        <result property="normitemName" column="normitem_name"/>
        <result property="normitemUnit" column="normitem_unit"/>
        <result property="normitemPriceNotTax" column="normitem_PriceNotTax"/>
        <result property="normitemPriceLabor" column="normitem_PriceLabor"/>
        <result property="normitemPNTMaterial" column="normitem_PNTMaterial"/>
        <result property="normitemPNTMachine" column="normitem_PNTMachine"/>
    </resultMap>

    <select id="selectNormItemBySectionId" resultMap="normItemMap">
        select * from normitem where section_id = #{sectionId}
    </select>

</mapper>